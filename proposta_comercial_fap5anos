  <script>
    const $ = (id) => document.getElementById(id);

    const empresaIn   = $("inputEmpresa");
    const cnpjIn      = $("inputCNPJ");
    const analiseIn   = $("inputValorAnalise");
    const inicialIn   = $("inputValorInicial");

    const empresaViews = [$("empresaView"), $("empresaView2")];
    const cnpjView     = $("cnpjView");
    const valorAnaliseViews = [$("valorAnaliseView"), $("valorAnaliseView2")];
    const valorInicialView  = $("valorInicialView");

    function setText(el, value){ if(el) el.textContent = value; }

    function apply() {
      const emp   = (empresaIn.value || "[Nome da Empresa]").trim();
      const cnpj  = (cnpjIn.value || "[00.000.000/0000-00]").trim();
      const vAnal = (analiseIn.value || "R$ 20.000,00").trim();
      const vIni  = (inicialIn.value || "R$ 8.500,00").trim();

      empresaViews.forEach(el => setText(el, emp));
      setText(cnpjView, cnpj);
      valorAnaliseViews.forEach(el => setText(el, vAnal));
      setText(valorInicialView, vIni);

      localStorage.setItem("propRetro_empresa", emp);
      localStorage.setItem("propRetro_cnpj", cnpj);
      localStorage.setItem("propRetro_valorAnalise", vAnal);
      localStorage.setItem("propRetro_valorInicial", vIni);
    }

    (function restore(){
      const emp   = localStorage.getItem("propRetro_empresa") || "";
      const cnpj  = localStorage.getItem("propRetro_cnpj") || "";
      const vAnal = localStorage.getItem("propRetro_valorAnalise") || "";
      const vIni  = localStorage.getItem("propRetro_valorInicial") || "";

      if(emp)   empresaIn.value = emp;
      if(cnpj)  cnpjIn.value = cnpj;
      if(vAnal) analiseIn.value = vAnal;
      if(vIni)  inicialIn.value = vIni;

      apply();
    })();

    [empresaIn, cnpjIn, analiseIn, inicialIn].forEach(input => {
      input.addEventListener("input", apply);
    });
  </script>
